<div class="class-card" style="background: #ffddcc; border: 1px solid #000000;">
    <div class="grid grid-3col">
        <div class="flexrow">
            <img src="{{class.img}}" width="60" height="60" />
            <p>{{class.name}}</p>
            <p>{{class.system.level}}</p>
            <button class="item-edit fabula-button"><i class="fas fa-solid fa-pencil"></i> {{localize
                "FU.UI.edit"}}</button>
            <button class="item-delete fabula-button"><i class="fas fa-solid fa-trash"></i> {{localize
                "FU.UI.delete"}}</button>
        </div>
    </div>
</div>